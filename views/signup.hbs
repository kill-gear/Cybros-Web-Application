{{> header}}
        <div style="padding-top:97px;">
                <h3 class="text-center filler-heading">Get connected with us.</h3>
                <div class="login-box row">
                    <form class="left col-md-6" action="/signup/new_User" method="post">
                    <!-- Sign up Form -->
                        <h1>Sign up</h1>
                        <input type="text" name="username" placeholder="Username" required >
                        <input type="email" name="email" placeholder="E-mail" required>
                        <input type="password" name="password" placeholder="Password" required >
                        <input type="password" name="repassword" placeholder="Retype password" required >
                        <p>{{signup}}</p>
                        <input type="submit" name="signup_submit" value="Sign up">
                    </form>
                    <div class="or">OR</div>
                    <form class="right col-md-6" action="/signup/login" method="post">
                    <!-- Sign in form  -->    
                        <h1>Sign in</h1>
                        <input type="text" name="username" placeholder="Username" required/>
                        <input type="password" name="password" placeholder="Password" required/>
                        <p>{{login}}</p>
                        <input type="submit" name="signup_submit" value="Sign in"/>
                    </form>
                    
                </div>
        </div>

{{> footer}}
